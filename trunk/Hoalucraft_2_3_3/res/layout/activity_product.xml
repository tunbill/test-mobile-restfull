<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ProductActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/product_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:typeface="serif" >
            </TextView>
            <ImageView
                android:id="@+id/product_image_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/dummy_content"
                android:src="@drawable/logo" >
            </ImageView>
            <TwoLineListItem
                android:id="@+id/twoLineListItem1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:mode="twoLine" />
            <TextView
                android:id="@+id/product_price_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </TextView>
            <RatingBar
                android:id="@+id/product_rating_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </RatingBar>
            <TextView
                android:id="@+id/product_description_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall" >
            </TextView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>